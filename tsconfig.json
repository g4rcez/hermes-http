{
	"compilerOptions": {
		"outDir": "build",
		"module": "esnext",
		"target": "ES2015",
		"lib": [
			"dom",
			"esnext"
		],
		"declaration": true,
		"moduleResolution": "node",
		"isolatedModules": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"browser-example",
		"rollup.config.js"
	]
}